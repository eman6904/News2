<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.News2" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <item name="colorControlActivated">@color/appFirstColor</item>
        <!-- Change status bar color -->
        <item name="android:statusBarColor">@color/appFirstColor</item>
        <!-- Make the status bar icons light or dark -->
        <item name="android:windowLightStatusBar">false</item> <!-- For light icons -->
    </style>
    <style name="ShapeAppearanceOverlay.MaterialCardView2.Cut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">20dp</item>

    </style>
    <style name="ShapeAppearanceOverlay.MaterialCardView3.Cut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomRight">20dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>

    </style>

    <style name="LeftSide" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialCardView2.Cut</item>
    </style>
    <style name="RightSide" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialCardView3.Cut</item>
    </style>
    <style name="Theme.News2" parent="Base.Theme.News2" />
